@page
@model SaaSLite.Web.Pages.ResultsModel

<div class="card">
    <div class="page-header">
        <h1>Results</h1>
        <div class="subtle">Latest ingested results</div>
    </div>

    <form method="get" class="filters">
        <div>
            <label>DeviceId</label>
            <input type="text" name="DeviceId" value="@Model.DeviceId" placeholder="device-001" />
        </div>

        <div>
            <label>From (UTC)</label>
            <input type="datetime-local" name="FromUtc"
                   value="@(Model.FromUtc?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
        </div>

        <div>
            <label>To (UTC)</label>
            <input type="datetime-local" name="ToUtc"
                   value="@(Model.ToUtc?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
        </div>

        <div>
            <button class="btn" type="submit">Filter</button>
            <a class="btn btn-secondary" href="/Results" style="margin-left:6px;">Clear</a>
        </div>
    </form>

    <hr class="sep" />

    @if (Model.Results == null || !Model.Results.Any())
    {
        <p class="subtle">No results found.</p>
    }
    else
    {
        <div class="table-wrap">
            <table>
                <thead>
                    <tr>
                        <th>Collected (UTC)</th>
                        <th>Received (UTC)</th>
                        <th>Device</th>
                        <th>Test</th>
                        <th>Patient</th>
                        <th>ResultId</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var r in Model.Results)
                {
                    <tr>
                        <td>@r.CollectedAtUtc.ToString("u")</td>
                        <td>@r.ReceivedAtUtc.ToString("u")</td>
                        <td>@r.DeviceId</td>
                        <td>@r.TestCode</td>
                        <td>@r.PatientId</td>
                        <td>@r.ResultId</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
