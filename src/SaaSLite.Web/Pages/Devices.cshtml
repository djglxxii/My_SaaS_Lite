@page
@model SaaSLite.Web.Pages.DevicesModel

<h1>Devices</h1>

@if (Model.Devices == null || !Model.Devices.Any())
{
    <p>No devices were found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>DeviceId</th>
            <th>SiteId</th>
            <th>Type</th>
            <th>Display Name</th>
            <th>Last Seen (UTC)</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.Devices)
        {
            <tr>
                <td>@d.DeviceId</td>
                <td>@d.SiteId</td>
                <td>@d.DeviceType</td>
                <td>@d.DisplayName</td>
                <td>@d.LastSeenUtc.ToString("u")</td>
                <td>@d.Status</td>
            </tr>
        }
        </tbody>
    </table>
}